<h1>Orders#index</h1>

<% @orders.each do |order| %>
<%= order.created_at.strftime("%m/%d %H:%M") %>
<table border=1>
<thead>
<tr><td width=100px>商品名</td><td>注文数</td></tr>
</thead>
<tbody>
  <% order.line_items.order(item_id: :asc).each do |line_item| %>
    <% if line_item.quantity != 0 %>
      <tr><td><%= Item.find_by(id: line_item.item_id).name %></td><td><%= line_item.quantity %></td></tr>
    <% end %>
  <% end %>
</table>
<% end %>
