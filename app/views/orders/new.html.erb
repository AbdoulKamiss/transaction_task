<h1>Orders#new</h1>

<%= form_for(@order) do |f| %>
<table border=1>
<thead>
<tr><td>商品名</td><td>注文数</td></tr>
</thead>
<tbody>
<% Item.all.each do |item| %>
     <%= f.fields_for(:line_items) do |ff| %>
      <tr><td><%= item.name %></td><td><%= ff.number_field :quantity, min: 0, max: 10 %></td></tr>
      <%= ff.hidden_field :item_id, value:item.id %>
     <% end %>
<% end%>
</table>
<%= f.submit %>
<% end %>
